#:kivy 2.0.0
<MainScreen>:
    BoxLayout:
        orientation: 'horizontal'
        padding: 10
        spacing: 10

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.7  # Zajmij 70% szerokości
            padding: 10
            spacing: 10

            Button:
                text: "GPU, CPU temp"
                size_hint: (None, None)
                size: (200, 50)
                on_press: root.go_to_temperature_screen()

            Button:
                text: "Bongo cat"
                size_hint: (None, None)
                size: (200, 50)
                on_press: root.go_to_bongo_cat_screen()

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.3  # Zajmij 30% szerokości

            Widget:  # Pusty widget dodany jako przestrzeń
                size_hint_y: None
                height: 200  # Wysokość przestrzeni, można dostosować

            Label:
                id: connection_status
                text: "Płytka nie jest podłączona"
                font_size: '18sp'
                size_hint: (None, None)
                size: (200, 60)
                color: 1, 0, 0, 1  # Kolor tekstu w formacie RGBA (czerwony)

            Button:
                id: connect_button
                text: "Połącz z płytką"
                size_hint: (None, None)
                size: (200, 50)
                on_press: root.connect_with_board()

            Button:
                text: "Ustawienia"
                size_hint:(None, None)
                size: (200,50)
                on_press: root.go_to_settings_screen()